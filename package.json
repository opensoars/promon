{
  "name": "promon",
  "version": "0.0.1",

  "description": "Executes specified commands when data changes in a directory",

  "scripts": {
    "test": "node node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha \"./tests/mocha/*.js\" && npm run coveralls",
    "local_test": "node node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha \"./tests/mocha/*.js\"",
    "coveralls": "node node_modules/coveralls/bin/coveralls.js < coverage/lcov.info"
  },

  "engines": {
    "node": ">=0.8"
  },

  "dependencies": {
  },

  "devDependencies": {
    "mocha": ">=2.2.5",
    "istanbul": ">=0.3.16",
    "coveralls": ">=2.11.2",
    "jsdoc": ">=3.3.2"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/opensoars/promon"
  },

  "readmeFilename": "README.md",

